{
  "name": "Python 3.10",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.10",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest",
      "postCreateCommand": "bash .devcontainer/postCreate.sh"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy"
      ]
    },
    "postCreateCommand": "bash .devcontainer/postCreate.sh"
  }
}